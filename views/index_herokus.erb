<div class="container">

  Heroku-apps<br>

  <table class="table table-striped table-bordered">
    <tr>
      <th>id</th>
      <th>app name</th>
      <th>メンテON</th>
      <th>メンテOFF</th>
    </tr>

    <% @apps.each do |app| %>
      <tr>
        <td><%= app['id'] %></td>
        <td><%= app['name'] %></td>
        <td><a href="/herokus_mante_on/<%= app['name'] %>">ON</a></p>
        <td><a href="/herokus_mante_off/<%= app['name'] %>">OFF</a></p>
      </tr>
    <% end %>
  </table>

</div>
